{
  "name": "@talking-tool/desktop",
  "version": "0.1.0",
  "private": true,
  "description": "Electron 桌面端 - 接收语音转文字、编辑提示词",
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.talkingtool.app",
    "productName": "AI提示词优化工具",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "dist-electron/**"
    ],
    "extraResources": [
      {
        "from": "resources/server",
        "to": "server"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    }
  },
  "scripts": {
    "dev": "tsc -p electron/tsconfig.json && concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:web": "vite",
    "build": "tsc -p electron/tsconfig.json && vite build",
    "preview": "vite preview",
    "electron:build": "npm run build && node ../../scripts/prepare-server-bundle.js && electron-builder",
    "electron:build:mac": "npm run build && node ../../scripts/prepare-server-bundle.js && electron-builder --mac",
    "electron:build:win": "npm run build && node ../../scripts/prepare-server-bundle.js && electron-builder --win"
  },
  "dependencies": {
    "qrcode": "^1.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.0",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  }
}
